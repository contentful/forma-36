{
  "lerna": "3.0.0",
  "npmClient": "yarn",
  "version": "independent",
  "useWorkspaces": true,
  "command": {
    "version": {
      "allowBranch": ["main"],
      "conventionalCommits": true,
      "message": "chore(release): updated release notes and package versions [ci skip]",
      "ignoreChanges": [
        "*.md",
        "*.mdx",
        "**/*.spec.*",
        "**/*.test.*",
        "**/*.stories.*",
        "**/examples/**",
        "**/__fixtures__/**",
        "**/__tests__/**"
      ]
    },
    "publish": {
      "allowBranch": ["main"]
    }
  }
}
