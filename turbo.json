{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "start": {
      "dependsOn": ["^start"]
    },
    "start:prod": {
      "dependsOn": ["^start:prod"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build:prod": {
      "dependsOn": ["^build:prod"],
      "outputs": [".next/**"],
      "env": [
        "CONTENTFUL_SPACE_ID",
        "CONTENTFUL_SPACE_ENVIRONMENT",
        "CONTENTFUL_ACCESS_TOKEN",
        "CONTENTFUL_PREVIEW_ACCESS_TOKEN"
      ]
    }
  }
}
