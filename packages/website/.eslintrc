{
  "extends": [
    "../../.eslintrc",
    "plugin:@next/next/recommended"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "overrides": [
    {
      // In Next.js, pages need to be default exported
      "files": [
        "pages/**/*"
      ],
      "rules": {
        "import/no-default-export": "off"
      }
    }
  ]
}