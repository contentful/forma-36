{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "esnext",
    "typeRoots": ["node_modules/@types", "./typings.d.ts"]
  },
  "include": ["./", ".eslintrc.js"],
  "exclude": [
    "dist",
    "dist-storybook",
    "node_modules",
    "**/*.stories.tsx",
    "**/*.test.tsx"
  ]
}