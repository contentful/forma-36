{
  "name": "forma-36-monorepo",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "packages/components/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "commit": "git-cz",
    "commitmsg": "validate-commit-msg",
    "generate": "plop --plopfile scripts/plopfile.js",
    "lint": "npm run-script lint:js && npm run-script lint:packages",
    "lint:js": "eslint packages --ext .js,.jsx,.ts,.tsx",
    "lint:packages": "node scripts/lint-packages.js",
    "prettier": "prettier --write '**/*.{jsx,js,ts,tsx,md,mdx}'",
    "prettier:check": "prettier --check '**/*.{jsx,js,ts,tsx,md,mdx}'",
    "storybook": "start-storybook -p 9001 -c ./scripts/.storybook",
    "storybook:build": "build-storybook -c ./scripts/.storybook -o dist-storybook --webpack-stats-json",
    "test": "jest",
    "test:watch": "jest --watch",
    "tsc": "tsc --noEmit",
    "tsc:watch": "tsc --noEmit --watch",
    "docs": "npm run-script docs:next",
    "docs:next": "turbo run start --scope=@contentful/f36-website --parallel --no-cache",
    "docs:next:build": "turbo run build:prod --scope=@contentful/f36-website --parallel --force",
    "docs:next:start-prod": "turbo run start:prod --scope=@contentful/f36-website --parallel",
    "changelog:gen": "node scripts/changesets/changelog-generate.js",
    "changelog:write": "node scripts/changesets/changelog-write.js",
    "changeset:publish": "node scripts/changesets/generate-releases.js",
    "postversion": "npx prettier",
    "prerelease": "node scripts/prerelease.mjs",
    "pretty:quick": "npx pretty-quick --staged --pattern '**/*.*(js|jsx|ts|tsx|md|mdx)'"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "overrides": {
    "@types/react": "16.14.22",
    "@types/react-dom": "16.9.14",
    "cross-spawn": "^7.0.6",
    "csstype": "3.1.3",
    "webpack": "5",
    "@babel/runtime": "^7.27.1"
  },
  "browserslist": "extends @contentful/browserslist-config",
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@changesets/assemble-release-plan": "^5.2.2",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.28.1",
    "@changesets/config": "^3.1.1",
    "@changesets/pre": "^1.0.10",
    "@changesets/read": "^0.6.3",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^17.1.0",
    "@contentful/browserslist-config": "^3.0.0",
    "@manypkg/get-packages": "^1.1.3",
    "@size-limit/preset-big-lib": "^11.1.5",
    "@storybook/addon-a11y": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-storysource": "^6.5.16",
    "@storybook/builder-webpack5": "^6.5.16",
    "@storybook/manager-webpack5": "^6.5.16",
    "@storybook/react": "^10.1.11",
    "@storybook/theming": "^8.6.14",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "12.1.5",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "14.6.1",
    "@types/jest": "^29.2.2",
    "@types/jest-axe": "3.5.9",
    "@types/storybook__react": "5.2.1",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.37.0",
    "assert": "^2.0.0",
    "babel-jest": "^29.0.3",
    "babel-plugin-emotion": "10.2.2",
    "chalk": "^4.1.0",
    "chromatic": "^11.7.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.44.0",
    "eslint-config-dev": "^3.3.1",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.2",
    "eslint-plugin-jest-dom": "^5.0.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-rulesdir": "0.2.2",
    "eslint-plugin-testing-library": "^5.11.0",
    "eslint-plugin-you-dont-need-lodash-underscore": "^6.12.0",
    "estimo": "^3.0.5",
    "fast-glob": "^3.2.12",
    "globby": "^11.0.2",
    "inquirer": "^9.1.1",
    "jest": "^29.3.1",
    "jest-axe": "9.0.0",
    "jest-environment-jsdom": "^29.0.3",
    "jest-resolve": "^29.2.0",
    "jest-watch-typeahead": "2.2.2",
    "octokit": "^2.0.14",
    "plop": "^2.5.3",
    "prettier": "2.8.8",
    "pretty-quick": "3.3.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-focus-lock": "^2.9.1",
    "react-router-dom": "^6.14.1",
    "semver": "^7.6.1",
    "simple-git-hooks": "^2.8.1",
    "size-limit": "^11.1.5",
    "tsup": "^7.2.0",
    "turbo": "^1.10.13",
    "typescript": "4.7.3",
    "wait-on": "^8.0.3",
    "webpack": "5"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run-script pretty:quick",
    "commit-msg": "npx commitlint -e \"$@\""
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.3.0",
    "yarn": "Please use npm"
  },
  "volta": {
    "node": "18.20.1",
    "npm": "8.3.0"
  }
}
