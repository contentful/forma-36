{
  "name": "forma-36-monorepo",
  "private": true,
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/components/*"
    ],
    "nohoist": [
      "@contentful/forma-36-fcss/node-sass-import"
    ]
  },
  "scripts": {
    "build": "lerna run build --stream",
    "chromatic": "chromatic --storybook-build-dir ./dist-storybook",
    "commit": "git-cz",
    "commitmsg": "validate-commit-msg",
    "generate": "plop --plopfile scripts/plopfile.js",
    "postinstall": "lerna run --scope @contentful/forma-36-tokens build && lerna run --scope @contentful/forma-36-fcss build",
    "lint": "yarn run lint:js && yarn run lint:packages",
    "lint:js": "eslint packages --ext .js,.jsx,.ts,.tsx",
    "lint:packages": "node scripts/lint-packages.js",
    "prettier": "prettier --write '**/*.{jsx,js,ts,tsx,md,mdx}'",
    "prettier:check": "prettier --check '**/*.{jsx,js,ts,tsx,md,mdx}'",
    "semantic-release": "lerna exec --concurrency 1 -- npx --no-install semantic-release -e semantic-release-monorepo",
    "storybook": "start-storybook -p 9001 -c ./scripts/.storybook -s ./scripts/.storybook/public",
    "storybook:build": "yarn build-storybook -c ./scripts/.storybook -s ./scripts/.storybook/public -o dist-storybook",
    "test": "jest",
    "tsc": "tsc --noEmit",
    "tsc:watch": "tsc --noEmit --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pretty-quick --staged --pattern '**/*.*(js|jsx|ts|tsx|md|mdx)'",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "postversion": "yarn run prettier"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "resolutions": {
    "@types/react": "16.14.2",
    "@types/react-dom": "16.9.10"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/node": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-decorators": "^7.0.0",
    "@babel/plugin-proposal-export-default-from": "^7.0.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-syntax-class-properties": "^7.0.0",
    "@babel/plugin-syntax-decorators": "^7.0.0",
    "@babel/plugin-syntax-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-async-to-generator": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/polyfill": "7.2.5",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@babel/runtime": "^7.6.2",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@contentful/browserslist-config": "^1.0.1",
    "@parcel/babel-plugin-transform-runtime": "2.0.0-beta.2",
    "@parcel/babel-preset-env": "2.0.0-beta.2",
    "@parcel/packager-ts": "2.0.0-beta.2",
    "@parcel/transformer-typescript-types": "2.0.0-beta.2",
    "@storybook/addon-a11y": "^6.1.21",
