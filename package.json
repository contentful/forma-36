{
  "name": "root",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "commitizen": "^3.0.4",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "16.1.0",
    "eslint-config-dev": "^2.0.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.15.0",
    "eslint-plugin-jsx-a11y": "^6.2.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "lerna": "^3.10.7",
    "prettier": "^1.16.1",
    "pretty-quick": "^1.8.0",
    "semantic-release": "^15.11.0",
    "semantic-release-monorepo": "^6.1.1",
    "travis-deploy-once": "^5.0.9"
  },
  "scripts": {
    "commit": "git-cz",
    "travis-deploy-once": "travis-deploy-once --pro",
    "semantic-release": "lerna exec --concurrency 1 -- npx --no-install semantic-release -e semantic-release-monorepo",
    "postinstall": "lerna bootstrap",
    "precommit": "yarn lint && yarn pretty-quick --staged",
    "commitmsg": "validate-commit-msg",
    "prepush": "yarn lint && yarn type-check && yarn test",
    "test": "yarn lerna run test",
    "lint": "yarn lerna run lint",
    "type-check": "yarn lerna run type-check"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
